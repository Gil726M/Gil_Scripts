#Write a bash script that reads a number between 1-10 and VALIDATE that the input is correct ,if input is correct, print the number in the power of 2, if not print “error”

#!/bin/bash\
\
# Read the input\
echo "Please enter a number between 1 and 10:"\
read number \
\
# Validate the input\
if ((1<=number && number<=10)); then\
    # Calculate the square of the number\
    square=$((number**2))\
    echo "The square of $number is $square"\
else\
    echo "Error: Invalid input"\
fi}
